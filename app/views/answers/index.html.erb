<turbo-frame id="answers-for-<%= @question.id %>">

<table class="table answers">
  <thead class="fs-5">
  <th class="p-4 pb-0 fw-light">
    <nobr>Respondent Name</nobr>
  </th>
  <th class="p-4 pb-0 fw-light">
    Email
  </th>
  <th class="p-4 pb-0 fw-light">
    Response
  </th>
  </thead>

  <% @answers.each do |answer| %>

    <tr>
      <td class="p-4 pb-4">
        <%= answer.name %>
      </td>
      <td class="p-4 pb-4">
        <%= answer.email %>
      </td>
      <td class="p-4 pb-4">
        <%= answer.text %>
      </td>
    </tr>

  <% end %>

</table>
</turbo-frame>
